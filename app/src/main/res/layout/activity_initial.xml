<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.InitialActivity"
    android:background="#4A2121"
>

    <LinearLayout
        android:id="@+id/ai_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        tools:ignore="RelativeOverlap"
        android:layout_marginTop="40dp"
        android:paddingHorizontal="10dp"
        android:orientation="vertical"
    >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="RelativeOverlap"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textSize="45sp"
            android:textColor="#FFFFFF"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="RelativeOverlap"
            android:text="@string/app_title"
            android:layout_gravity="center"
            android:textStyle="italic"
            android:textSize="32sp"
            android:textColor="#FFFFFF"
        />

    </LinearLayout>

    <ImageView
        android:id="@+id/ai_virus"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/ai_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_virus_green"
        tools:ignore="ContentDescription"
    />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/ai_virus"
        android:src="@drawable/ic_at_home"
        tools:ignore="ContentDescription"
    />

</RelativeLayout>